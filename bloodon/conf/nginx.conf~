# nginx.conf
upstream django {
    # connect to this socket
    #server unix:///tmp/bloodon_socket.sock;    # for a file socket
    server 127.0.0.1:8889;      # for a web port socket
    }

server {
    # the port your site will be served on
    listen      8888;
    # the domain name it will serve for
    server_name .example.com;   # substitute your machine's IP address or FQDN
    charset     utf-8;

    #Max upload size
    client_max_body_size 75M;   # adjust to taste

    # Django media
    location /media  {
                root /home/work/Bloodon/bloodon/media;      # your Django project's media files
    }
    location /static {
		autoindex on;
		root /home/work/Bloodon/bloodon;     # your Django project's static files
	}

    # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  django;
        include     /etc/nginx/uwsgi_params; # or the uwsgi_params you installed manually
        }
    }
